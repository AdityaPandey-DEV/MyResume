{
    "manifest_version": 3,
    "name": "MyResume LinkedIn Sync",
    "version": "1.0",
    "description": "One-click sync of LinkedIn data to MyResume CMS.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost:3000/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}