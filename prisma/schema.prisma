// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at         Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model CodingProfile {
  id             String   @id @default(cuid())
  platform       String   @unique // "leetcode", "codeforces"
  username       String?
  rating         Int?
  globalRank     Int?     // For LeetCode/Codeforces
  solvedCount    Int?
  easySolved     Int?
  mediumSolved   Int?
  hardSolved     Int?
  contestCount   Int?     // For Codeforces
  maxRating      Int?     // For Codeforces
  rank           String?  // e.g., "Grandmaster"
  lastSyncedAt   DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model AdminSettings {
  id             String   @id @default(cuid())
  key            String   @unique // e.g., "GEMINI_API_KEY", "LEETCODE_USERNAME", "GITHUB_USERNAME"
  value          String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// Hero Section
model Hero {
  id          String   @id @default(cuid())
  name        String
  title       String
  description String   @db.Text
  imageUrl    String
  linkedinUrl String?
  githubUrl   String?
  email       String?
  leetcodeUrl String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// About Section
model About {
  id        String   @id @default(cuid())
  heading   String
  subHeading String  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  journey   Journey?
  values    PersonalValue[]
  focusAreas FocusArea[]
}

model Journey {
  id        String   @id @default(cuid())
  aboutId  String   @unique
  title     String
  about     About    @relation(fields: [aboutId], references: [id], onDelete: Cascade)
  paragraphs JourneyParagraph[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model JourneyParagraph {
  id        String   @id @default(cuid())
  journeyId String
  content   String   @db.Text
  order     Int
  journey   Journey  @relation(fields: [journeyId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([journeyId, order])
}

model PersonalValue {
  id        String   @id @default(cuid())
  aboutId   String
  value     String
  order     Int
  about     About    @relation(fields: [aboutId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([aboutId, order])
}

model FocusArea {
  id          String   @id @default(cuid())
  aboutId    String
  title       String
  description String   @db.Text
  icon        String?
  order       Int
  about       About    @relation(fields: [aboutId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([aboutId, order])
}

// Projects
model Project {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  technologies String[]
  icon        String?
  gradient    String?
  imageUrl    String?
  githubUrl   String?
  repoUrl     String?  // For auto-syncing from GitHub
  liveDemoUrl String?
  syncEnabled Boolean  @default(false)
  isVisible   Boolean  @default(false) // Default hidden for imports
  lastSyncedAt DateTime?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  featuredProject FeaturedProject?
}

model FeaturedProject {
  id          String   @id @default(cuid())
  projectId   String   @unique
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  imageUrl    String?
  technologies String[]
  keyFeatures KeyFeature[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model KeyFeature {
  id                String          @id @default(cuid())
  featuredProjectId String
  feature           String
  order             Int
  featuredProject   FeaturedProject @relation(fields: [featuredProjectId], references: [id], onDelete: Cascade)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@index([featuredProjectId, order])
}

// Skills
model SkillCategory {
  id        String   @id @default(cuid())
  title     String
  icon      String?
  order     Int      @default(0)
  skills    Skill[]
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Skill {
  id             String        @id @default(cuid())
  categoryId     String
  category       SkillCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  name           String
  level          Int           @default(0) // 0-100
  order          Int           @default(0)
  isActive       Boolean       @default(true)
  isTrending     Boolean       @default(false)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([categoryId, order])
}

model AdvancedSkill {
  id        String   @id @default(cuid())
  category  String   // 'ai' or 'cloud'
  skill     String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category, order])
}

model SoftSkill {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order])
}

// Education
model Education {
  id          String   @id @default(cuid())
  level       String
  duration    String
  degree      String
  institution String
  description String   @db.Text
  icon        String?
  bgColor     String?
  lightText   String?
  pillBg      String?
  pillText    String?
  skills      String[]
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order])
}


// Certifications
model Certification {
  id             String   @id @default(cuid())
  title          String
  description    String   @db.Text
  organization   String
  date           String
  tags           String[]
  certificateUrl String?
  imageUrl       String? // For the PDF thumbnail/preview
  logoUrl        String? // For the company favicon
  icon           String?
  color          String?
  order          Int      @default(0)
  isVisible      Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([order])
}

// Work Experience
model Experience {
  id          String   @id @default(cuid())
  position    String
  company     String
  duration    String
  location    String?
  description String   @db.Text
  logo        String?
  skills      String[]
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order])
}

// Testimonials (LinkedIn Recommendations)
model Testimonial {
  id          String   @id @default(cuid())
  name        String
  role        String
  company     String?
  content     String   @db.Text
  imageUrl    String?
  linkedinUrl String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order])
}

// Social Stats (Connections, Followers, etc.)
model SocialStat {
  id        String   @id @default(cuid())
  platform  String   @unique // "linkedin", "github", "twitter"
  followers Int      @default(0)
  connections Int    @default(0)
  lastSyncedAt DateTime @default(now())
}
// AI Career Advisor & Analysis
model UserAnalysis {
  id              String   @id @default(cuid())
  holisticPersona String   @db.Text // AI generated persona based on all platforms
  strengths       String[]
  gaps            String[]
  topTechStack    String[]
  suggestedFocus  String?  @db.Text
  analysisDate    DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model CareerSuggestion {
  id             String   @id @default(cuid())
  type           String   // "course", "skill", "dsa", "trend"
  title          String
  description    String   @db.Text
  difficulty     String?  // "Beginner", "Intermediate", "Advanced"
  relevanceScore Int      @default(0) // 0-100
  actionUrl      String?
  isApplied      Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([type])
}

model JobHunterProfile {
  id              String   @id @default(cuid())
  resumeUrl       String?
  targetRoles     String[]
  preferredCities String[]
  isActivelyLooking Boolean @default(true)
  updatedAt       DateTime @updatedAt
}

model TargetJob {
  id              String   @id @default(cuid())
  company         String
  role            String
  location        String?
  jobUrl          String?
  hrName          String?
  hrEmail         String?
  hrLinkedIn      String?
  referralEmail   String?  @db.Text // AI Generated
  referralLinkedIn String? @db.Text // AI Generated
  connectionNote  String?  @db.Text // AI Generated
  status          String   @default("Saved") // "Saved", "Applied", "Interviewing", "Offer", "Rejected"
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([status])
}

model RoadmapItem {
  id              String   @id @default(cuid())
  title           String
  description     String   @db.Text
  targetDate      String?
  isCompleted     Boolean  @default(false)
  type            String   // "skill", "job", "certificate", "milestone"
  order           Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([order])
}
